{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Next.js",
        "skipFiles": ["<node_internals>/**"],
        "runtimeExecutable": "node",
        "runtimeArgs": [
          "node_modules/.bin/next",
          "dev"
        ],
        "outFiles": ["${workspaceFolder}/.next/**/*.js"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "port": 3000,
        "env": {
          "NODE_ENV": "development"
        },
        "sourceMaps": true
      }
    ]
  }
  